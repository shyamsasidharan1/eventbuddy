# Database Configuration
DATABASE_URL="postgresql://eventbuddy_user:eventbuddy_pass@localhost:5432/eventbuddy?schema=public"

# Redis Configuration  
REDIS_URL="redis://localhost:6379"

# JWT Configuration (for custom auth)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@your-organization.com"
FROM_NAME="EventBuddy"

# Member Invitation Configuration
WEB_ORIGIN="http://localhost:3000"
INVITE_TOKEN_TTL=259200  # 72 hours in seconds
INVITE_EMAIL_FROM="no-reply@eventbuddy.local"

# App Configuration
NODE_ENV="development"
PORT=3000
API_PORT=3001

# Identity Platform (if using instead of custom auth)
GOOGLE_CLOUD_PROJECT_ID="your-gcp-project-id" 
FIREBASE_API_KEY="your-firebase-api-key"
FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"

# File Upload (if needed for future phases)
GOOGLE_CLOUD_STORAGE_BUCKET="your-storage-bucket"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # requests per window

# Logging
LOG_LEVEL="info"

# Development Tools
PGADMIN_EMAIL="admin@eventbuddy.local"
PGADMIN_PASSWORD="admin123"

# Organization Setup (for seed data)
DEFAULT_ORG_NAME="Sample Charity Organization"
DEFAULT_ORG_WEB_URL="https://sample-charity.org"